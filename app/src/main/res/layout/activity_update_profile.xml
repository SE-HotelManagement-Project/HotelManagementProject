<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    tools:context=".controller.systemAccessController.UpdateProfileActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update Profile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_lock_24" />

                <TextView
                    style="@style/text_style"
                    android:text="Username:" />


                <TextView
                    android:id="@+id/tvUpUserName"
                    style="@style/edit_text_style"
                    android:layout_gravity="center"
                    android:text="Alay_guest" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_edit" />

                <TextView
                    style="@style/text_style"
                    android:text="Password:" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilUpPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUpPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textWebPassword"
                        android:paddingLeft="15dp"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <!--                <com.google.android.material.textfield.TextInputLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    app:passwordToggleEnabled="true">-->

                <!--                    <com.google.android.material.textfield.TextInputEditText-->
                <!--                        android:id="@+id/etUpPassword"-->
                <!--                        style="@style/edit_text_style"-->
                <!--                        android:padding="10dp"-->
                <!--                        android:text="password"-->
                <!--                        android:inputType="textWebPassword" />-->

                <!--                </com.google.android.material.textfield.TextInputLayout>-->


            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_lock_24" />

                <TextView
                    style="@style/text_style"
                    android:text="Role:" />

                <TextView
                    android:id="@+id/tvUpRole"
                    style="@style/edit_text_style"
                    android:layout_gravity="center"
                    android:text="Guest" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style2">

                <LinearLayout
                    style="@style/horz_linear_layout_style2"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="10dp"
                        app:srcCompat="@drawable/ic_baseline_edit" />

                    <TextView
                        style="@style/text_style"
                        android:text="LastName:" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUpLastName"
                        style="@style/edit_text_style"
                        android:hint="Parikh" />

                </LinearLayout>

                <LinearLayout
                    style="@style/horz_linear_layout_style2"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:srcCompat="@drawable/ic_baseline_edit" />

                    <TextView
                        style="@style/text_style"
                        android:text="FirstName:" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUpFirstName"
                        style="@style/edit_text_style"
                        android:hint="Alay" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_edit" />

                <TextView
                    style="@style/text_style"
                    android:text="Phone:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUpPhone"
                    style="@style/edit_text_style"
                    android:hint="4084831223"
                    android:inputType="number"
                    android:maxLength="10" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_edit" />

                <TextView
                    style="@style/text_style"
                    android:text="E-mail:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUpEmail"
                    style="@style/edit_text_style"
                    android:hint="alay.parikh@mavs.uta.edu"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_edit" />

                <TextView
                    style="@style/text_style"
                    android:text="Street Address:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUpStreetAddress"
                    style="@style/edit_text_style"
                    android:hint="404 border" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_edit" />

                <TextView
                    style="@style/text_style"
                    android:text="City:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUpCity"
                    style="@style/edit_text_style"
                    android:hint="arlington" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style2">

                <LinearLayout
                    style="@style/horz_linear_layout_style2"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="15dp"
                        app:srcCompat="@drawable/ic_baseline_edit" />

                    <TextView
                        style="@style/text_style"
                        android:text="State:" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUpState"
                        style="@style/edit_text_style"
                        android:hint="texas" />

                </LinearLayout>

                <LinearLayout
                    style="@style/horz_linear_layout_style2"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        app:srcCompat="@drawable/ic_baseline_edit" />

                    <TextView
                        style="@style/text_style"
                        android:text="Zip Code:" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUpZipCode"
                        style="@style/edit_text_style"
                        android:hint="76010"
                        android:inputType="number"
                        android:maxLength="6" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUpCCN"
                style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_edit" />

                <TextView
                    style="@style/text_style"
                    android:text="Credit Card Number:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUpCreditCardNumber"
                    style="@style/edit_text_style"
                    android:hint="1053608910536921"
                    android:inputType="number"
                    android:maxLength="16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUpCCEx"
                style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_edit" />

                <TextView
                    style="@style/text_style"
                    android:text="Credit Card Expiry:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUpCreditCardExpiry"
                    style="@style/edit_text_style"
                    android:hint="02/24"
                    android:maxLength="5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUpCCType"
                style="@style/horz_linear_layout_style2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/ic_baseline_edit" />

                <TextView
                    style="@style/text_style"
                    android:text="Credit Card Type:" />

                <Spinner
                    android:id="@+id/spnrUpCreditCardType"
                    style="@style/spinner_style"
                    android:entries="@array/card_type" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llEditRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <!--        <Button-->
        <!--            android:id="@+id/btnUpCancel"-->
        <!--            style="@style/btn_style"-->
        <!--            android:layout_weight="1"-->
        <!--            android:text="Cancel" />-->

        <Button
            android:id="@+id/btnUpSave"
            style="@style/btn_style2"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_save_profile"
            android:text="Save Changes" />

    </LinearLayout>

</LinearLayout>