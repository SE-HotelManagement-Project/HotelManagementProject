<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    tools:context=".view.MgrRoomDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_search_room" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Search Available Rooms"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvEditRdTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="Modify Room Details"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Hotel Name:" />

                <TextView
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Maverick" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="start date:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDateFrom"
                    style="@style/edit_text_style"
                    android:hint="07/14/2020" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="end date:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDateTo"
                    style="@style/edit_text_style"
                    android:hint="07/15/2020" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="start time:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartTime"
                    style="@style/edit_text_style"
                    android:hint="12:03" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:gravity="center"
                    android:text="room type:" />

                <Spinner
                    android:id="@+id/spnrRoomType"
                    style="@style/spinner_style"
                    android:entries="@array/room_type" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Room Number:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRoomNumRd"
                    style="@style/edit_text_style"
                    android:hint="102" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="price per night:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRoomPriceRd"
                    style="@style/edit_text_style"
                    android:hint="$100" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Floor Number:" />


                <TextView
                    android:id="@+id/etFloorNumRd"
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:text="1"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Occupied Status:" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOccupiedStatus"
                    style="@style/edit_text_style"
                    android:hint="1" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Availability Status:" />


                <Spinner
                    android:id="@+id/spnrAvlblStatus"
                    style="@style/spinner_style"
                    android:entries="@array/availability_status" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnEditRd"
        style="@style/btn_style"
        android:layout_weight="1"
        android:text="Modify Room Details"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llEditRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnCancel"
            style="@style/btn_style"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnSave"
            style="@style/btn_style"
            android:layout_weight="1"
            android:text="Save" />

    </LinearLayout>

</LinearLayout>