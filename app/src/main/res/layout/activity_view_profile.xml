<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    tools:context=".view.ViewProfileActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View Profile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="User Name:" />

                <TextView
                    android:id="@+id/tvAdminVpUserId"
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" samar_admin" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Password:" />


                <TextView
                    android:id="@+id/tvAdminVpPassword"
                    style="@style/text_style"
                    android:text=" admin123" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Role:" />


                <TextView
                    android:id="@+id/tvAdminVpRole"
                    style="@style/text_style"
                    android:text=" Admin" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Last Name:" />


                <TextView
                    android:id="@+id/tvAdminVpLastName"
                    style="@style/text_style"
                    android:text=" Hills" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="First Name:" />


                <TextView
                    android:id="@+id/tvAdminVpFirstName"
                    style="@style/edit_text_style"
                    android:text="Samar" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:gravity="center"
                    android:text="Phone:" />

                <TextView
                    android:id="@+id/tvAdminVpPhone"
                    style="@style/edit_text_style"
                    android:text="8088290912" />


            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="E-mail:" />


                <TextView
                    android:id="@+id/tvAdminVpEmail"
                    style="@style/edit_text_style"
                    android:text="sagargearsup@gmail.com" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Street Address:" />


                <TextView
                    android:id="@+id/tvAdminVpStrAddr"
                    style="@style/edit_text_style"
                    android:text="Vintage Pad" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="City:" />


                <TextView
                    android:id="@+id/tvAdminVpCity"
                    style="@style/edit_text_style"
                    android:text="Arlington" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="State:" />


                <TextView
                    android:id="@+id/tvAdminVpState"
                    style="@style/edit_text_style"
                    android:text="Texas" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Zip Code:" />


                <TextView
                    android:id="@+id/tcAdminVpZip"
                    style="@style/edit_text_style"
                    android:text="76010" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Credit Card Number:" />


                <TextView
                    android:id="@+id/tvCrCdNumVp"
                    style="@style/edit_text_style"
                    android:inputType="number"
                    android:maxLength="16"
                    android:text="1053608910536921" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Card Expiry Number:" />

                <TextView
                    android:id="@+id/etRoomPriceRd"
                    style="@style/edit_text_style"
                    android:text="02/24" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnAdminVpModify"
        style="@style/btn_style"
        android:layout_margin="10dp"
        android:text="Update Profile"
        android:textSize="15sp"
        android:visibility="visible" />

</LinearLayout>