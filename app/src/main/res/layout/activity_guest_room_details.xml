<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivAppIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_room_details" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Room Details"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Hotel Name:"
                    android:textColor="@color/colorGrey" />

                <TextView
                    android:id="@+id/tvGuestRmDHotel"
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Maverick" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Check In Date:"
                    android:textColor="@color/colorGrey" />


                <TextView
                    android:id="@+id/tvGuestRmDDateFrom"
                    style="@style/edit_text_style"
                    android:text="07/14/2020" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Check Out Date:"
                    android:textColor="@color/colorGrey" />


                <TextView
                    android:id="@+id/tvGuestRmDDateTo"
                    style="@style/edit_text_style"
                    android:text="07/15/2020" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="start time:"
                    android:textColor="@color/colorGrey" />


                <TextView
                    android:id="@+id/tvGuestRmDStartTime"
                    style="@style/edit_text_style"
                    android:text="12:03" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="room type:"
                    android:textColor="@color/colorGrey" />

                <TextView
                    android:id="@+id/tvGuestRmDRoomType"
                    style="@style/edit_text_style"
                    android:text="Standard" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Number of Rooms:"
                    android:textColor="@color/colorGrey" />


                <TextView
                    android:id="@+id/tvGuestRmDRoomNumRd"
                    style="@style/edit_text_style"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Room price per night:"
                    android:textColor="@color/colorGrey" />


                <TextView
                    android:id="@+id/tvGuestRmDRoomPriceRd"
                    style="@style/edit_text_style"
                    android:text="$135" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Number of Nights:"
                    android:textColor="@color/colorGrey" />


                <TextView
                    android:id="@+id/tvGuestRmDFloorNumRd"
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:text="1"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout style="@style/horz_linear_layout_style">

                <TextView
                    style="@style/text_style"
                    android:text="Total Price:"
                    android:textColor="@color/colorGrey" />


                <TextView
                    android:id="@+id/tvGuestRmDOccupiedStatus"
                    style="@style/edit_text_style"
                    android:text="$135" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnGuestRmDContinue"
        style="@style/btn_style"
        android:text="Continue"
        android:visibility="visible" />

</LinearLayout>